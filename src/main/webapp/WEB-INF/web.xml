<!DOCTYPE web-app PUBLIC
        "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
        "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
    <display-name>Archetype Created Web Application</display-name>

    <servlet>
        <servlet-name>sap</servlet-name>
        <jsp-file>/index.jsp</jsp-file>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet>
        <servlet-name>servletSniffer</servlet-name>
        <servlet-class>com.sevenbits.servlets.sniffer.ServletSniffer</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>sap</servlet-name>
        <url-pattern>/sap/</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>servletSniffer</servlet-name>
        <url-pattern>/sniffer</url-pattern>
    </servlet-mapping>

</web-app>

